<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
      <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-full p-10 bg-zinc-900 text-white">
           <div class="nav mb-10 p-4 w-full">
            <a class="text-blue-600" href="/">back to home</a>
        </div>

        <h1 class="mb-3 tracking-tighter text-3xl">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% if(users.length>0) { %>

                <% users.forEach(function(user){%>
                  <div class="user w-72 p-4 m-4 bg-zinc-800 rounded-lg">
                     <div class="w-full h-52 rounded-lg bg-zinc-600 overflow-hidden">
                         <img class="w-full h-full object-cover object-top" src=" <%= user.image %>" alt="">
                     </div>
                     <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                     <h5 class="text-zinc-500"><%= user.email %></h5>
                     <div class="flex gap-3 mt-10">
                         <a class="text-zinc-300" href="/edit/<%= user._id%>">Edit User</a>
                         <a class="text-red-600" href="/delete/<%= user._id%>">Delete User</a>
                     </div>
                 </div>
             <%  }) %>
            <%} else {%>
            <div class="text-gray-600 text-2xl">no user yet.</div>
            <%}%>
          
        </div>
    </div>
    
</body>
</html>